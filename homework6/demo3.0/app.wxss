/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.center {
	margin-left: auto;
	margin-right: auto;
}
.hero-img {
	width: 100%;
}
.img-bg {
	position: absolute;
}
.mask {
	background-color: rgba(0, 0, 0, .3);
	position: absolute;
	width: 100%;
	height: 100%;
}
.text-center {
	text-align: center;
}
.txt-white {
	color: #fff;
}
.txt-gray {
	color: #95989A;
}
.title {
	font-size: 40rpx;
	display: block;
	margin: 20rpx;
}
.subtitle {
	font-size: 24rpx;
	display: block;
	margin: 4rpx;
}
.content {
	font-size: 24rpx;
}
.middle {
	text-align: center;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
}
.like {
	background-color: #8A8A8A;
	display: inline-block;
	position: relative;
	transform: rotate(45deg);
	/*transition: background-color .3s;*/
}
.like::before,
.like::after {
	background-color: #8A8A8A;
	position: absolute;
	width: 100%;
	height: 100%;
	content: ' ';
	border-radius: 50%;
}
.like::before {
	bottom: 0rpx;
	left: -50%;
}
.like::after {
	top: -50%;
	right: 0rpx;
}
.like.active {
	background-color: #DF162B;
}
.like.active::before,
.like.active::after {
	background-color: #DF162B;
}
.clearfix::before,
.clearfix::after {
	display: table;
	content: " ";
}
.clearfix::after {
	clear: both;
}
.angle {
	position: relative;
	transform: rotate(45deg);
	display: inline-block;
}
.angle.angle-down {
	transform: rotate(225deg);
}
.angle::before,
.angle::after {
	content: '';
	background-color: #767676;
	position: absolute;
	top: 0;
	left: 0;
}
.angle::before {
	width: 100%;
	height: 2rpx;
}
.angle::after {
	height: 100%;
	width: 2rpx;
}
.invisible {
	opacity: 0;
}

.tmp-base-outer {
	width: 100%;
	display: block;
	text-align: left;
	background-color: #fff;
	padding-top: 30rpx;
	padding-bottom: 22rpx;
	box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, .16);
}
.tmp-base-item-name {
	font-size: 28rpx;
	font-weight: bold;
	margin-left: 20rpx;
}
.tmp-base-item-image {
	width: 100%;
	height: 260rpx;
}
.tmp-base-item-info {
	width: 100%;
	padding-left: 20rpx;
	padding-right: 20rpx;
	box-sizing: border-box;
}
.tmp-base-item-price {
	font-size: 24rpx;
	color: #248F53;
	display: inline-block;
}
.tmp-base-item-like {
	width: 21rpx;
	height: 21rpx;
	float: right;
	margin-top: 10rpx;
}
.divider {
	height: 2rpx;
	background-color: #95989A;
}
.divider-short {
	width: 412rpx;
}