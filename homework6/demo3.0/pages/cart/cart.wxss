page {
	width: 100%;
	height: 100%;
	background-color: #eee;
}
.empty {
	font-size: 26rpx;
	color: #797979;
}
.text-empty {
	margin-bottom: 40rpx;
}
.button-empty {
	margin-top: 40rpx;
	border-radius: 0;
	color: #fff;
	background-color: #248F53;
}
.bottom-controls {
	position: fixed;
	width: 100%;
	height: 166rpx;
	background-color: #248F53;
	bottom: 0;
	left: 0;
	color: #fff;
	font-size: 40rpx;
	display: flex;
	align-items: center;
}
.amount-label {
	margin-left: 66rpx;
}
.cart-subtotal {
	margin-left: 40rpx;
}
.btn-checkout {
	margin-right: 60rpx;
	border-radius: 0;
	border: #fff 4rpx solid;
	background-color: transparent;
	color: #fff;
	display: inline-block;
	padding: 14rpx 64rpx;
	line-height: 40rpx;
	font-size: 40rpx;
}

.cart-item {
	width: 100%;
	border-bottom: 2rpx #E5E5E5 solid;
	border-top: 2rpx #E5E5E5 solid;
	height: 215rpx;
	background-color: #fff;
	display: flex;
	align-items: center;
	padding-left: 36rpx;
	padding-right: 16rpx;
	box-sizing: border-box;
}
.thumb {
	width: 138rpx;
	height: 138rpx;
}
.cart-item-info {
	font-size: 28rpx;
	max-width: 340rpx;
	margin-left: 20rpx;
}
.item-name {
	color: #757575;
	font-weight: 200;
	display: block;
	margin-top: 8rpx;
	margin-bottom: 8rpx;
}
.item-price {
	color: #212121;
	font-weight: 400;
	display: block;
}
.number-control {
	margin-left: auto;
	margin-right: 0;
	display: inline-block;
	color: #95989A;
}
.ctrl {
	display: inline-block;
	padding-left: 46rpx;
	padding-right: 46rpx;
}
.button-hover {
	background-color: #18673B;
}

