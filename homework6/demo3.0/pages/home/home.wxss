.mcontainer{
  height: 100%;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.item{
  flex-grow: 1;
  height: 30%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 100%;
  padding: 0 2%;
}

.image{
  width: 750rpx;
  height: 400rpx;
}

.login-item{
  width: 90%;
  margin-top: 30rpx;
  border-bottom: 1px solid #eee;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 20rpx;
}

.bottom{
  border-bottom: 0px;
}


.login-item-info{
  font-size: 20px;
  color: #888;
  padding-bottom: 20rpx;
}

.login-pwd{
  display: flex;
  justify-content: space-between;
  flex-grow: 1;
  align-items: center;
}

.login-pwd text{
  height: 100%;
}